<div class="row">
    <div class="col-6"><h1>Users</h1></div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/adduser" type="button" class="btn btn-primary align-self-center"><i class="bi bi-file-plus"></i> Add user</a>
    </div>
</div>
<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">E-mail</th>
            <th scope="col">Phone</th>
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <th scope="row">{{this.ID}}</th>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td class="text-end">
                <a href="#" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
                <a href="/edituser/{{this.ID}}" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
                <a href="#" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>